@model Kursach.ModelViews.LoginViewModel
@{
    ViewBag.Title = "Sign in";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<form class="form-signin col-md-6 m-auto" method="post" asp-controller="Account" asp-action="Login">
    <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
    <div asp-validation-summary="ModelOnly"></div>
    <label asp-for="Name" class="text-muted mt-3"></label>
    <input asp-for="Name" class="form-control" placeholder="Email address">
    <span asp-validation-for="Name" class="d-block"></span>
    <label asp-for="Password" class="text-muted mt-3"></label>
    <input asp-for="Password" class="form-control" placeholder="Password">
    <span asp-validation-for="Password" class="d-block"></span>
    <div class="checkbox mb-3 mt-3">
        <label asp-for="RememberMe">
            <input asp-for="RememberMe"> Remember me
        </label>
    </div>
    <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>
    <a asp-action="ForgotPassword">Forgot password?</a><br />
    <a id="login" asp-area="Identity" asp-page="/Account/Login">External Logins</a>
</form>
